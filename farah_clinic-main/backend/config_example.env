# إعدادات قاعدة البيانات MongoDB
MONGODB_URL=mongodb://localhost:27017

# إذا كانت قاعدة البيانات تتطلب مصادقة، استخدم هذا التنسيق:
# MONGODB_URL=mongodb://username:password@localhost:27017/database_name

# إعدادات JWT
JWT_SECRET_KEY=your-very-secure-secret-key-here-change-in-production
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=43200

# إعدادات التطبيق
APP_NAME=نظام عيادة الدكتورة فرح الأسنان
APP_VERSION=1.0.0
DEBUG=True

# إعدادات CORS (في الإنتاج، حدد النطاقات المسموحة)
ALLOWED_ORIGINS=*

# إعدادات الأمان
BCRYPT_ROUNDS=12
